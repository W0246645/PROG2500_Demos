<UserControl x:Class="UserControlsDemo.ClickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UserControlsDemo"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="300">
    <Border Background="Orange" BorderThickness="3" Margin="10">
        <StackPanel>
            <TextBox x:Name="txtBox" FontSize="24"></TextBox>
            <Button Content="Click Me!" x:Name="ClickMeButton"
                    FontSize="24" Click="ClickMeButton_Click"/>
            <CheckBox FontSize="24" Content="This is the checkbox"></CheckBox>
        </StackPanel>        
    </Border>
</UserControl>
