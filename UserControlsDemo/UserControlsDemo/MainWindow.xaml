<Window x:Class="UserControlsDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UserControlsDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel>
            <Button Content="Click" Click="Button_Click" FontSize="24"></Button>
            <TextBox x:Name="textMessage"></TextBox>
        </StackPanel>
        <StackPanel x:Name="MainContainer" Orientation="Horizontal">
            <local:ClickerControl HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <local:ClickerControl HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <local:ClickerControl></local:ClickerControl>
        </StackPanel>
    </StackPanel>
</Window>
